public class TablaHash {
    private static int tamanio = 50;
    private ListaEnlazada[] tabla;

    public TablaHash() {
        tabla = new ListaEnlazada[tamanio];
        
        for(int i = 0; i < tamanio; i++){
            tabla[i] = new ListaEnlazada();
        }
    }
    
    private int hash(String nombre){
        double hash = 0;
        
        for(int i = 0; i < nombre.length(); i++){
            hash = hash * 131 + nombre.charAt(i);
        }
        return (int)(hash % tamanio);
    }
    
    public void insertar(String nombre){
        int indice = hash(nombre);
        
        tabla[indice].insertar(nombre);
    }
    
    public boolean buscar(String nombre){
        int indice = hash(nombre);
        return tabla[indice].buscar(nombre);
    }
    
    public void imprimir(){
        for(int i = 0; i < tamanio; i++){
            System.out.println("Indice " + i + ": ");
            tabla[i].imprimir();
        }
    }

    @Override
    public String toString() {
        return "TablaHash{" + "tabla=" + tabla + '}';
    }
}
